%h1 My bets

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  Your Bets
  %tbody
    - @my_bets_created.each do |bet|
      %tr
        %td= bet.name
        %td= link_to 'Show', bet
        %td= link_to 'Edit', edit_bet_path(bet)
        %td= link_to 'Destroy', bet, :method => :delete, :data => { :confirm => 'Are you sure?' }
  %br
%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  Bets you took
  %tbody
    - @my_bets_taken.each do |bet|
      %tr
        %td= bet.name
        %td= link_to 'Show', bet

= link_to 'New Bet', new_bet_path