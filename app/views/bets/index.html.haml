%h1 Listing bets

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @bets.each do |bet|
      %tr
        %td= bet.name
        %td= link_to 'Show', bet
        %td= link_to 'Edit', edit_bet_path(bet)
        %td= link_to 'Destroy', bet, :method => :delete, :data => { :confirm => 'Are you sure?' }

